@functions{
    public string CamelCase(string str)
    {
        var words = str.Split(new[] { "_", " " }, StringSplitOptions.RemoveEmptyEntries);
        return string.Join(" ", words);
    }
}

<table class="table table-striped table-hover table-hover">
    <caption>Field Agents</caption>
    <thead>
        <tr>
            <th class="hidden-cell"></th>
            @foreach (var Column in ViewBag.Agents.Columns)
            {
                <th>@CamelCase(Column.ToString())</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var Row in ViewBag.Agents.Rows)
        {
            <tr class="relative">
                <th scope="row" class="hidden-cell"><a class="stretched-link" href=@Url.Action("Details", "FieldAgent", new{ name = Row["name"], nr = Row["nr"] })></a></th>
                @foreach (var Column in ViewBag.Agents.Columns)
                {
                    <td>@Row[Column]</td>
                }
            </tr>
        }
    </tbody>
</table>